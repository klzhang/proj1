<h3>Trainer</h3>
<p>Name: <%= @trainer.name if @trainer.name %></p>
<p>Email: <%= @trainer.email if @trainer.email %></p>

<% if @trainer == current_trainer %>
<%= button_to "Create Pokemon", create_path, :class => "button medium", :method => :get %>
<% end %>
<p>Pokemon: </p>

<% @poke = @trainer.pokemon %>
<% @poke.each do |p| %>
<p> <%= p.name %> is level <%= p.level %> and has <%= p.health %> health </p>
<%= image_tag("pokemon/#{p.ndex}.png", alt: "pokemon") %>

<%= button_to "Damage!", damage_path(id: p), :class => "button medium", :method => :patch %>
<% end %>

